 <% layout('layout') -%>

    <!-- Add Category -->

    <% if (message.length > 0) { %>
    	<div class="alert alert-success alert-dismissible">
        	<button type="button" class="close" data-dismmiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        	</button>
        	<%= message %>
      	</div>
    <% } %>

    <section class="row"><h1 class="hidden">Content</h1>
        <section class="col-md-8 main">
            <div id="note"></div>
            <div class="clearfix"></div>
            <h1>Add a Category</h1>
            <p class="root">Here you can add a new category.</p>

            <!-- Add Category -->
            <article><h2 class="hidden">Add a Category</h2>
                <section class="topic">
                    <!-- <input type="hidden" value="fef5f5ec067c84305decc8adc3ddafec" id="token" name="token"> -->
                    <section class="add-topic"><h2 class="hidden">Add Category</h2>
                    <form role="form" method="post" action="add-category">
                        <section><h3 class="hidden">Form Inputs</h3>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="required" for="newCategoryTxt">Name</label>
                                        <input id="newCategoryTxt" type="text" class="form-control input-lg" maxlength="70" required="true" name="category">
                                    </div>
                                </div>
                            </div>
                        </section>

                        <!-- Save Button -->
                        <section class="row update"><h3 class="hidden">Add</h3>
                            <div class="col-md-12">
                                <div class="underline"></div>
                                <button type="submit" class="btn btn-primary pull-right" id="addCategory" data-loading-text="Loading...">ADD</button>
                            </div>
                        </section>
                    </form>
                    </section>
                </section>
            </article>
        </section>
        <!-- Sidebar -->
                <div class="col-md-1"></div>
        <aside class="col-md-3 sidebar"><h3 class="hidden">Sidebar</h3>

            <!-- Preferences -->
            <section>
                <h4><i class="fa fa-user red"></i>PREFERENCES</h4>
                <ul class="list-group">
                    <li class="list-group-item"><a href="profile">Profile</a></li>
                    <li class="list-group-item"><a href="settings">Settings</a></li>
                    <li class="list-group-item"><a href="logout">Logout</a></li>
                </ul>
            </section>
        </aside>
    </section>